<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.logincalanderreservationsystemproject.CreateAccountController">
    <VBox alignment="CENTER" spacing="10.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0">
        <Label text="Create Your Account" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
        <TextField promptText="First Name" />
        <TextField promptText="Last Name" />
        <TextField promptText="Email" />
        <TextField promptText="Phone Number" />
        <TextField promptText="Username" />
        <TextField promptText="Password" />
        <Button text="Create Account" onAction="#handleCreateAccount" style="-fx-background-color: black; -fx-text-fill: white; -fx-padding: 10 20;" />
    </VBox>
</AnchorPane>
