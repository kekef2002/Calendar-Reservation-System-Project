<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane styleClass="mainFxmlClass" xmlns:fx="http://javafx.com/fxml" fx:controller="group1.DashboardController">
    
    <!-- Header -->
    <top>
        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="prevMonthButton" text="&lt;"/>
            <Label fx:id="monthYearLabel" text="July 2024"/>
            <Button fx:id="nextMonthButton" text="&gt;"/>
        </HBox>
    </top>

    <!-- Calendar Grid -->
    <center>
        <GridPane fx:id="calendarGrid" alignment="CENTER" hgap="10" vgap="10" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
        </GridPane>
    </center>

    <!-- Day Details Panel -->
    <left>
        <VBox spacing="10" BorderPane.alignment="CENTER">
            <Label text="Available Time Slots"/>
            <ListView fx:id="timeSlotsListView"/>
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
        </VBox>
    </left>

    <!-- Appointment Form -->
    <right>
        <VBox spacing="10" BorderPane.alignment="CENTER">
            <Label text="Appointment Form"/>
            <TextField fx:id="nameField" promptText="Name"/>
            <TextField fx:id="emailField" promptText="Email"/>
            <TextField fx:id="phoneField" promptText="Phone"/>
            <Button fx:id="confirmAppointmentButton" text="Confirm Appointment"/>
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
        </VBox>
    </right>

    <!-- Footer -->
    <bottom>
        <HBox alignment="CENTER" spacing="20" BorderPane.alignment="CENTER">
            <Label text="Contact Information"/>
            <Hyperlink text="Privacy Policy"/>
            <Hyperlink text="Terms of Service"/>
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </HBox>
    </bottom>
</BorderPane>
