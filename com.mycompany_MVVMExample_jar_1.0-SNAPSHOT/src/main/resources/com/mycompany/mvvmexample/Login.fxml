<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="496.0" prefWidth="819.0" spacing="25.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.mvvmexample.LoginController">
    <padding>
        <Insets bottom="52.0" left="210.0" right="209.0" top="118.0" />
    </padding>
    <children>
        <VBox alignment="TOP_CENTER" prefHeight="261.0" spacing="24.0">
            <children>
                <VBox alignment="TOP_CENTER" spacing="4.0">
                    <children>
                        <Label text="Sign in" textFill="BLACK" />
                        <Label text="Enter your username to sign up for this app" textFill="BLACK" />
                    </children>
                </VBox>
                <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="400.0" spacing="8.0" style="-fx-background-color: white; -fx-border-color: #E0E0E0; -fx-border-radius: 8;">
                    <padding>
                        <Insets bottom="8.0" left="16.0" right="16.0" top="8.0" />
                    </padding>
                    <children>
                        <TextField fx:id="usernameField" promptText="Username..." style="-fx-background-color: white; -fx-text-fill: #828282;" />
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="400.0" spacing="8.0" style="-fx-background-color: white; -fx-border-color: #E0E0E0; -fx-border-radius: 8;">
                    <padding>
                        <Insets bottom="8.0" left="16.0" right="16.0" top="8.0" />
                    </padding>
                    <children>
                        <PasswordField fx:id="passwordField" promptText="Password" style="-fx-background-color: white; -fx-text-fill: #828282;" />
                    </children>
                </HBox>
                <Button fx:id="loginButton" onAction="#loginUser" prefHeight="40.0" prefWidth="400.0" style="-fx-background-color: black; -fx-background-radius: 8; -fx-text-fill: white;" text="Sign up with username">
                    <padding>
                        <Insets left="16.0" right="16.0" />
                    </padding>
                </Button>
            </children>
        </VBox>
        <Button onAction="#navigateToRegister" prefHeight="40.0" prefWidth="400.0" style="-fx-background-color: #EEEEEE; -fx-background-radius: 8; -fx-text-fill: #0A67F1;" text="Create Your Account">
            <padding>
                <Insets bottom="8.0" left="16.0" right="16.0" top="8.0" />
            </padding>
        </Button>
    </children>
</VBox>
